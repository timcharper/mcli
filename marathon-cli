  declare -a otherargs
  local color_output=""
  local force=""
  if [ -t 1 ]; then
    color_output="--color-output"
  else
    color_output="--monochrome-output"
  fi

  while ! [ -z "$1" ]; do
    arg="$1"
    shift
    case "$arg" in
      --help)
        inspect-help
        exit 0
        ;;
      --color)
        color_output="--color-output"
        ;;
      --no-color)
        color_output="--monochrome-output"
        ;;
      -f|--force)
        force=1
        ;;
      -*)
        echo "unrecognized argument: $arg" 1>&2
        delete-app-help
        exit 1
        ;;
      *)
        otherargs+=("$arg")
        ;;
    esac
  done

  if [ "${#otherargs[@]}" -ne 1 ]; then
    echo "expected one argument specifying an app id; got ${otherargs[@]}"
    delete-app-help
    exit 1
  fi

  app_id="${otherargs[0]}"

  local params=""
  if [ ! -z "$force" ]; then
    params="?force=true"
  fi

  marathon-curl "/v2/apps${app_id}${params}" -X DELETE | jq $color_output '.'
}

